<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sise.makerSpace.dao.ArticleDao">

    <resultMap type="Article" id="articleMemberResultMap">
        <id property="articleId" column="article_id"/>
        <result property="sort" column="sort"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="author" column="author"/>
        <result property="creationTime" column="creation_time"/>
    </resultMap>

    <sql id="article">
        article_id,sort,title,content,author,creation_time
    </sql>

    <select id="findAllArticle" resultMap="articleMemberResultMap">
        select
        <include refid="article" />
        from article
        ORDER BY article_id DESC
    </select>



    <select id="findArticle" resultMap="articleMemberResultMap">
        SELECT
        <include refid="article" />
        from article
        <if test="sort!=''">
            where sort=#{sort}
        </if>
        ORDER BY article_id DESC
    </select>

    <insert id="addArticle">
        insert into article(
        <include refid="article" />
        ) values
        (null,#{sort},#{title},#{content},#{author},NOW())
    </insert>

</mapper>