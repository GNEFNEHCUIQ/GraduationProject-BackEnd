<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sise.makerSpace.dao.UserDao">

    <resultMap type="User" id="userResultMap">
        <id property="uid" column="uid"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="role" column="role"/>
    </resultMap>

    <select id="getUserById" resultMap="userResultMap">
        select * from user where uid=#{uid} and password=#{password}
    </select>

    <insert id="register" parameterType="User">
        insert into user(uid,name,password,role) values (null,#{name},#{password},1)
    </insert>

    <select id="checkDuplicateName">
        select 1 from user where name=#{name}
    </select>

</mapper>