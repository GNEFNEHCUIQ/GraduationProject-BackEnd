<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sise.makerSpace.dao.ArticleDao">

    <resultMap type="Article" id="articleMemberResultMap">
        <id property="articleId" column="article_id"/>
        <result property="sort" column="sort"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="author" column="author"/>
        <result property="creationTime" column="creation_time"/>
    </resultMap>

    <sql id="article">
        article_id,sort,title,content,author,creation_time
    </sql>

    <select id="findAllArticle" resultMap="articleMemberResultMap">
        select
        <include refid="article" />
        from article
        ORDER BY article_id DESC
    </select>

    <select id="findLatestArticle" resultMap="articleMemberResultMap">
        SELECT
        <include refid="article" />
        from article
        <if test="null != sort and '' != sort">
            sort=#{sort}
        </if>
        ORDER BY creation_time DESC
        limit #{pageIndex},#{pageSize}   #真傻了 本来序号就和时间高度关联 直接序号DESC就行了
    </select>

    <select id="findLatestArticleOfSomeKind" resultMap="articleMemberResultMap">
        SELECT
        <include refid="article" />
        from article
        where sort=#{sort}
        ORDER BY creation_time DESC
        limit 0,5                          #应该是不用了吧
    </select>

</mapper>